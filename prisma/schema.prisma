generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model TeamMember {
  id       String @id @default(cuid())
  nameEn   String
  nameAr   String
  roleEn   String
  roleAr   String
  roleType String
  descEn   String
  descAr   String
  detailsEn String[] // Array of strings
  detailsAr String[] // Array of strings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("team_members")
}
